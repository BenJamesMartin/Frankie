    [tap \cf3 setDelegate\cf0 :\cf4 self\cf0 ];\
    [tap \cf3 setNumberOfTapsRequired\cf0 :\cf5 1\cf0 ];\
    [image \cf3 addGestureRecognizer\cf0 :tap];\
